{
  "name": "shipshipship-template-echo",
  "description": "A clean card-based event display template for ShipShipShip",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "displayName": "Echo",
  "author": "ShipShipShip",
  "keywords": [
    "shipshipship",
    "theme",
    "events",
    "cards",
    "voting"
  ],
  "shipshipship": {
    "demoUrl": "https://echo-demo.yoursite.com",
    "features": [
      "Responsive",
      "Dark-mode",
      "List Layout",
      "Advanced Filtering",
      "Voting System"
    ]
  },
  "scripts": {
    "dev": "vite dev",
    "dev:host": "vite dev --host",
    "dev:proxy": "node dev-proxy.js",
    "build": "svelte-kit sync && vite build",
    "build:analyze": "npm run build && npx vite-bundle-analyzer dist",
    "preview": "vite preview",
    "preview:host": "vite preview --host",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "clean": "rm -rf .svelte-kit build dist",
    "env:example": "cp .env.example .env.local",
    "config:show": "node -e \"console.log('VITE_ADMIN_API_URL:', process.env.VITE_ADMIN_API_URL || '(not set)');\""
  },
  "dependencies": {
    "@tiptap/core": "^3.2.0",
    "@tiptap/extension-image": "^3.2.0",
    "@tiptap/extension-link": "^3.2.0",
    "@tiptap/extension-table": "^3.2.0",
    "@tiptap/extension-table-cell": "^3.2.0",
    "@tiptap/extension-table-header": "^3.2.0",
    "@tiptap/extension-table-row": "^3.2.0",
    "@tiptap/pm": "^3.2.0",
    "@tiptap/starter-kit": "^3.2.0",
    "clsx": "^2.1.1",
    "lucide-svelte": "^0.469.0",
    "shadcn-svelte": "^0.14.3",
    "svelte-sonner": "^0.3.28",
    "tailwind-merge": "^3.0.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.49.0",
    "@sveltejs/vite-plugin-svelte": "^5.1.1",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "svelte": "^5.20.2",
    "svelte-check": "^4.2.2",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3",
    "vite": "^6.4.1"
  }
}
